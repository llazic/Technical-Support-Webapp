@model Proba.Models.Korisnik

@{
    ViewBag.Title = "Registracija";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <h3>
        <font color="red">
            @ViewBag.Message
        </font>
    </h3>
</center>
<h2>Registracija - Postanite klijent</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Ime">Ime</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Ime" name="Ime" type="text" value="" required maxlength="20">
                <span class="field-validation-valid text-danger" data-valmsg-for="Ime" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Prezime">Prezime</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Prezime" name="Prezime" type="text" value="" required maxlength="20">
                <span class="field-validation-valid text-danger" data-valmsg-for="Prezime" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Email">Email</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Email" name="Email" type="email" value="" required maxlength="30">
                <span class="field-validation-valid text-danger" data-valmsg-for="Lozinka" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Lozinka">Lozinka</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Lozinka" name="Lozinka" type="password" value="" required maxlength="10" minlength="3">
                <span class="field-validation-valid text-danger" data-valmsg-for="Lozinka" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registruj se" class="btn btn-default" />
            </div>
        </div>
    </div>
}
