
@{
    ViewBag.Title = "Prijava";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prijava</h2>

<h3><font color="red"> @ViewBag.Message </font></h3>

<form method="post" action="~/Gost/Login">
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="Email">Email</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Email" name="korisnik.Email" type="email" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Lozinka" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Lozinka">Lozinka</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Lozinka" name="korisnik.Lozinka" type="password" value="" required>
                <span class="field-validation-valid text-danger" data-valmsg-for="Lozinka" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prijavi se" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>