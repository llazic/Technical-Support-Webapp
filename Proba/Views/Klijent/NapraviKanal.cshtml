@model Proba.Models.Kanal

@{
    ViewBag.Title = "Napravi kanal";
    Layout = "~/Views/Shared/KlijentLayout.cshtml";
}

<h2>Napravi kanal</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Naziv">Naziv</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Naziv" name="Naziv" type="text" value="" required>
                <span class="field-validation-valid text-danger" data-valmsg-for="Naziv" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Napravi" class="btn btn-default" />
            </div>
        </div>
    </div>
}